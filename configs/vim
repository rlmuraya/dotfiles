""" Vundle config

set nocompatible
filetype off
set rtp+=~/.vim/bundle/Vundle.vim
call vundle#begin()

Plugin 'VundleVim/Vundle.vim'
Plugin 'altercation/vim-colors-solarized'
Plugin 'vim-syntastic/syntastic'

call vundle#end()
filetype plugin indent on

"Brief help
" :PluginList       - lists configured plugins
" :PluginInstall    - installs plugins; append `!` to update or just :PluginUpdate
" :PluginSearch foo - searches for foo; append `!` to refresh local cache
" :PluginClean      - confirms removal of unused plugins; append `!` to auto-approve removal
"see :h vundle for more details or wiki for FAQ

"Solarized config
syntax enable
set t_Co=256
set background=dark
colorscheme solarized

"Syntastic config
let g:syntastic_check_on_open = 1
let g:syntastic_check_on_wq = 0
let g:syntastic_javascript_checkers = ['eslint']
let g:syntastic_javascript_eslint_exe = 'npm run lint --'

""" /Vundle config

"Show line numbers.
set number
highlight LineNr ctermbg=black

"Allow backspace, and backspace over newline.
set backspace=indent,eol,start

"Show matching curly brace.
set showmatch

"Key remappings.
map <F1> <ESC>
imap <F1> <ESC>
map <PageDown> <Right>
imap <PageDown> <Right>
map <PageUp> <Left>
imap <PageUp> <Left>

"Search settings.
set incsearch                       "Highlight result as you type.
set hlsearch                        "Use search highlighting.
set smartcase                       "Ignore case if search pattern is in
                                    " lowercase (case-sensitive otherwise).

"Indentation settings.
set smartindent                     "Use autoindentation.
set tabstop=4
set shiftwidth=4                    "Use 4 spaces instead of a tab.
set pastetoggle=<F2>                "Toggle to keep existing indentation in a
                                    " paste.

"Whitespace settings.
set expandtab                       "Replace tabs with spaces.
set listchars=tab:→\ ,trail:·,nbsp:·
set list                            "Show hidden characters.
autocmd BufWritePre * :%s/\s\+$//e  "Trim trailing whitespace for all files.

"Set warning column at 80 chars, and use different background past 100 chars.
let &colorcolumn="80,".join(range(100,999),",")
